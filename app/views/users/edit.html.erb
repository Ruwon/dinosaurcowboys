<div class="panel">
  <h2>Edit user</h2>

  <%= form_for(@user) do |f| %>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, :autofocus => true %><br />

    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %><br />

    <%= f.label :birthday %><br />
    <%= f.date_select(:birthday, :start_year => 1980) %><br />

    <%= f.label :email %><br />
    <%= f.email_field :email %><br />

    <%= f.label :password %><br />
    <%= f.password_field :password %><br />

    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %><br />

    <%= f.label :rank %><br />
    <%= f.collection_select(:rank_id, Rank.all, :id, :name, include_blank: 'None') %><br />

    <%= f.submit "Edit user" %>
  <% end %>
</div>
