<div class="panel">
  <h1>Sign Up</h1>

  <%= simple_form_for @user do |f| %>
    <%= f.simple_fields_for :characters, @user.characters.first do |c| %>
      <%= c.input :name, label: "Character Name" %>
      <%= c.input :server, label: "Character Server" %>
    <% end %>

    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.button :submit, "Sign Up" %>
  <% end %>

  <p>Already a member? <%= link_to "Sign in", new_user_session_path %></p>
</div>
