<% user = application.user %>
<%= simple_form_for application, url: user_application_path(user) do |f| %>
  <%= f.input :name, hint: "This is your actual name" %>
  <%= f.input :age %>
  <%= f.input :gender, collection: [[0, "Male"], [1, "Female"]], as: :radio_buttons, label_method: :last, value_method: :first, checked: application.gender %>
  <%= f.input :battlenet, label: "Battle.net" %>
  <%= f.input :logs, hint: "World of Logs, and/or Warcraft Logs" %>
  <%= f.input :computer, label: "Computer Specs", input_html: {rows: 5} %>
  <%= f.input :history, label: "Your World of Warcraft History", input_html: {rows: 5} %>
  <%= f.input :leadership, label: "Guild Leadership" %>
  <%= f.input :skill, label: "Skill, Rotation, and Playstyle", input_html: {rows: 5} %>
  <%= f.input :why, label: "Why Party Shark?", input_html: {rows: 3} %>
  <%= f.button :submit %>
<% end %>
