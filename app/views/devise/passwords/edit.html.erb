<div class="page">
  <div class="title">
    <h1>Change your password</h1>
  </div>

  <%= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put } do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <%= f.input :password, label: "New password" %>
    <%= f.input :password_confirmation, label: "Confirm new password" %>

    <%= f.button :submit, "Change Password" %>
  <% end %>

  <p>
    Think you remember it? <%= link_to "Sign in", new_user_session_path %><br />
    Never actually made an account? <%= link_to "Sign up", new_user_path %>
  </p>
</div>
