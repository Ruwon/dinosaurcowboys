<!DOCTYPE html>
<html>
<head>
  <title>PartyShark</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= "#{params[:controller]}##{params[:action]}" %>'>

<header class="logo">
  <h1><%= link_to "Party Shark", root_path %></h1>
</header>

<div class="flash">
  <% if notice %>
  <p class="notice"><%= notice %></p>
  <% end %>
  <% if alert %>
  <p class="alert"><%= alert %></p>
  <% end %>
</div>

<nav class="topbar">
  <ul class="main-links">
    <li><a href="#">Logs</a></li>
    <li><a href="#">Recruitment</a></li>
    <li><%= link_to "Roster", roster_path %></li>
    <li><a href="#">Guild Charter</a></li>
  </ul>

  <% if user_signed_in? %>
  <ul class="user-links">
    <li><%= link_to "Raids", raids_path %></li>
    <li><a href="#">Forums</a></li>
  </ul>
  <% end %>

  <ul class="session-links">
    <% if user_signed_in? %>
      <li><%= link_to current_user.name, user_path(current_user) %></li>
      <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
    <% else %>
      <li><%= link_to "Sign In", new_user_session_path %></li>
    <% end %>
  </ul>
</nav>

<div class="container">
  <%= yield %>
</div>

<footer>Party Shark 2013</footer>

</body>
</html>
