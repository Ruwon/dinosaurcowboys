%nav.navbar.navbar-default
  #bs-example-navbar-collapse-1.collapse.navbar-collapse
    %ul.nav.navbar-nav
      - if policy(Forum).index?
        %li= link_to "Forums", forums_path
      - if policy(Raid).index?
        %li= link_to "Raids", raids_path
      - if policy(Application).index?
        %li
          = link_to applications_path do
            Applications
            %span.status.pending= Application.pendings.count
            %span.status.trial= Application.trials.count
      - if policy(PagesController).logs?
        %li= link_to "Logs", logs_path
      - if policy(Character).roster?
        %li= link_to "Roster", roster_path
      - if policy(PagesController).recruitment? && !current_user.try(:rank)
        %li= link_to "Recruitment", recruitment_path
      - if policy(PagesController).charter?
        %li= link_to "Charter", charter_path
    %ul.nav.navbar-nav.pull-right
      - if policy(User).index?
        %li= link_to "Users", users_path
      - if user_signed_in?
        %li= user_tag(current_user)
        - unless current_user.rank
          - if current_user.application
            %li= link_to "View Application", user_application_path(current_user)
          - else
            %li= link_to "Apply", new_user_application_path(current_user)
        %li= link_to "Sign out", destroy_user_session_path, method: :delete
      - else
        %li= link_to "Sign up", new_user_path
        %li= link_to "Sign in", new_user_session_path
