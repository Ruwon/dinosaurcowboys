<div class="panel">
  <div class="forum-title">
    <h1>Forums</h1>

    <ul class="actions">
      <% if can? :create, Forum %>
      <li><%= link_to "New Forum", new_forum_path, class: "button" %></li>
      <% end %>
    </ul>
  </div>

  <ul class="forums">
    <% @forums.each do |forum| %>
    <% freshest_topic = forum.freshest %>

    <li class="forum">
      <%= link_to forum_path(forum), class: "button" do %>
        <%= forum %>
        <span class="info">
          <%= pluralize(forum.topics.count, "topic") %>
          <% if freshest_topic %>
          <%= from_now_tag freshest_topic.posts_updated_at %>
          <% end %>
        </span>
      <% end %>
    </li>
    <% end %>
  </ul>

  <%= render "forums/table", topics: @topics, topics_label: "Recent Topics" %>
</div>