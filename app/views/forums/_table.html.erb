<% if topics.any? %>
<table class="topic list">
  <tr>
    <th>
      <%= defined?(topics_label) ? topics_label : "Topics" %>
    </th>

    <% if params[:action] == "index" %>
      <th>Forum</th>
    <% end %>

    <th>Posts</th>
    <th>Views</th>
    <th>Last Poster</th>
    <th>Freshness</th>
  </tr>
  <% topics.each do |topic| %>
  <% last_post = topic.posts.last %>
  <tr>
    <td>
      <%= link_to topic, forum_topic_path(topic.forum, topic) %>
    </td>

    <% if params[:action] == "index" %>
    <td class="forum">
    <%= topic.forum %>
    </td>
    <% end %>

    <td class="count">
      <%= topic.posts.count %>
    </td>

    <td class="views">
      <%= topic.impressionist_count %>
    </td>
    <td class="last-poster">
      <% if last_post %>
      <%= character_tag(last_post.user.main) %>
      <% end %>
    </td>
    <td class="freshness">
      <%= from_now_tag topic.updated_at %>
    </td>
  </tr>
  <% end %>
</table>
<%= paginate topics %>
<% else %>
<p>No Topics Yet.</p>
<hr />
<% end %>