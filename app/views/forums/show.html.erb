<div class="panel">
  <h1>
    <%= @forum %>
    <span class="sub">
      <%= link_to "Forums", forums_path %>
    </span>
  </h1>

  <table class="topic list">
    <tr>
      <th>Topics</th>
      <th>Posts</th>
      <th>Views</th>
      <th>Last Poster</th>
      <th>Freshness</th>
    </tr>
    <% @topics.each do |topic| %>
    <% last_post = topic.posts.last %>
    <tr>
      <td><%= link_to topic, forum_topic_path(@forum, topic) %></td>
      <td class="count"><%= topic.posts.count %></td>
      <td class="views"><%= rand(100) %></td>
      <td class="last-poster"><%= last_post.user %></td>
      <td class="freshness">
        <abbr class="datetime" title="<%= last_post.created_at %>"><%= last_post.created_at.iso8601 %></abbr>
      </td>
    </tr>
    <% end %>
  </table>

  <%= link_to "New Topic", new_forum_topic_path(@forum) %>
</div>