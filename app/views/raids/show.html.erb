<div class="panel">
  <h1>
    <%= @raid.name %>
    <span class="sub"><%= link_to "All Raids", raids_path %></span>
  </h1>

  <ul>
    <% @raid.bosses.each do |boss| %>
    <% if can? :read, boss %>
    <li><%= link_to boss.name, raid_boss_path(@raid, boss) %></li>
    <% end %>
    <% end %>
  </ul>
  <% if can? :create, Boss %>
  <%= link_to "Add boss", new_raid_boss_path(@raid) %>
  <% end %>

  <div class="content">
    <%= raw @raid.markdown(:content) %>
  </div>

  <% @posts.each do |post| %>
    <%= render "shared/posts/show", post: post %>
  <% end %>
  <%= paginate @posts %>

  <% if can? :create, @post %>
  <%= form_for([@raid, @raid.posts.build]) do |f| %>
    <%= render "shared/posts/edit", f: f, submit: "Reply" %>
  <% end %>
  <% end %>
</div>
