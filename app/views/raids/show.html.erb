<div class="panel">
  <h1><%= @raid.name %></h1>

  <h2>Bosses</h2>
  <ul>
    <% @raid.bosses.each do |boss| %>
    <li><%= link_to boss.name, raid_boss_path(@raid, boss) %></li>
    <% end %>
  </ul>
  <%= link_to "Add boss", new_raid_boss_path(@raid) %>

  <div>
    <%= simple_format @raid.content %>
  </div>

  <% @posts.each do |post| %>
    <div class="panel">
      <%= post.body %><br />
      <%= post.user.email %>
    </div>
  <% end %>

  <%= form_for([@raid, @raid.posts.build]) do |f| %>
    <div>
      <%= f.text_field :body %>
      <%= f.submit "Post" %>
    </div>
  <% end %>
</div>
