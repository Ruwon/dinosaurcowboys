<div class="panel">
  <h1><%= @raid.name %></h1>

  <h2>Bosses</h2>
  <ul>
    <% @raid.bosses.each do |boss| %>
    <li><%= link_to boss.name, raid_boss_path(@raid, boss) %></li>
    <% end %>
  </ul>
  <%= link_to "Add boss", new_raid_boss_path(@raid) %>

  <div>
    <%= raw @raid.markdown(:content) %>
  </div>

  <% @posts.each do |post| %>
    <%= render "shared/posts/show", post: post %>
  <% end %>
  <%= paginate @posts %>

  <h3>New Post</h3>
  <%= form_for([@raid, @raid.posts.build]) do |f| %>
    <%= render "shared/posts/edit", f: f %>
  <% end %>
</div>
