<div class="panel">
  <div class="title">
    <h2>
      <%= link_to "Raids", raids_path %> /
      <%= link_to @raid.name %>
    </h2>

    <ul class="actions">
      <% if can? :update, @raid %>
        <li><%= link_to fa_icon("edit"), edit_raid_path(@raid) %></li>
      <% end %>
      <% if can? :destroy, @raid %>
        <li>
          <%= link_to fa_icon("trash-o"), raid_path(@raid), method: :delete, confirm: "Are you sure?" %>
        </li>
      <% end %>
    </ul>
  </div>

  <h3>
    Bosses
    <% if can? :create, Boss %>
      <%= link_to fa_icon("plus"), new_raid_boss_path(@raid) %>
    <% end %>
  </h3>
  <ul class="button-list">
    <% @raid.bosses.each do |boss| %>
      <% if can? :read, boss %>
        <li><%= link_to boss.name, raid_boss_path(@raid, boss) %></li>
      <% end %>
    <% end %>
  </ul>

  <div class="content">
    <%= raw @raid.markdown(:content) %>
  </div>

  <hr />

  <% @posts.each do |post| %>
    <%= render "shared/posts/show", post: post %>
  <% end %>
  <%= paginate @posts %>

  <% if can? :create, @post %>
    <%= simple_form_for [@raid, @raid.posts.build] do |f| %>
      <%= render "shared/posts/edit", f: f, submit: "Reply" %>
    <% end %>
  <% end %>
</div>
