<div class="recruitment-classes">
  <% @recruitments ||= policy_scope(RecruitmentClass) %>

  <div class="title">
    <h2>Recruitment</h2>

    <ul class="actions">
      <% if policy(RecruitmentClass).update? %>
        <li><%= link_to fa_icon("edit"), edit_recruitment_path %></li>
      <% end %>
    </ul>

    <div class="info">
      Updated <%= date_tag RecruitmentClass.updated_at, relative: true %>
    </div>
  </div>

  <ul class="classes">
    <% @recruitments.each do |rc| %>
      <% if rc.needed? %>
        <li>
          <div title="<%= rc.class_name %>"><%= image_tag rc.class_icon_path, size: '40x40', class: 'border' %></div>
          <% rc.needs.each do |k, v| %>
            <div title="<%= k %>">
              <%= image_tag rc.spec_icon_path(k), size: '25x25', class: 'border' %><br />
              <%= v %>
            </div>
          <% end %>
        </li>
        <div class="clearfix"></div>
      <% end %>
    <% end %>
  </ul>
</div>
